<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#f2f2f2"
        android:orientation="vertical"
        android:paddingLeft="40dp"

        android:paddingRight="40dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/customer_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:baselineAlignBottom="false"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/origin_address"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="or address"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/destination_address"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="dest address"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/delivery_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="time"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/number_of_movers"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="movers"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="name"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/phone_number"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="phone"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/payment"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"

            android:text="payment"
            android:textSize="18dp" />

    </LinearLayout>

    <Button
        android:id="@+id/change_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="didChangeStatusButtonClick"
        android:padding="10dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/done_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Завершен✅"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>